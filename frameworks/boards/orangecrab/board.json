          "io": "output"
        }
    ],
    "gpio": [
      {
        "name": "vga_hs",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "vga_vs",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "vga_r",
        "type": "uint6",
        "io": "output"
      },
      {
        "name": "vga_g",
        "type": "uint6",
        "io": "output"
      },
      {
        "name": "vga_b",
        "type": "uint6",
        "io": "output"
      }
    ]
  }
}
