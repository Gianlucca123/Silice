{
  "name": "orangecrab",
  "variants": [
    {
      "name": "bare",
      "framework" : "orangecrab_bare.v",
      "pins": [
        "bare"
      ]
    },
    {
      "name": "full",
      "framework" : "orangecrab_full.v",
      "pins": [
        "bare",
        "gpio"
      ]
    }
  ],
  "builders": [
    {
      "system" : "shell",
      "command" : "orangecrab.sh",
      "description": "Custom shell scripts using yosys and nextpnr"
    }
