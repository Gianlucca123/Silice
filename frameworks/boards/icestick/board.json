{
  "name": "icestick",
  "variants": [
    {
      "name"      : "configurable",
      "framework" : "icestick.v",
      "pins"      : [ 
        {"set"    : "basic"},
        {"set"    : "vga",  "define" : "VGA=1"},
        {"set"    : "oled", "define" : "OLED=1"}
      ]
    }
  ],
  "builders": [
    {
      "builder" : "edalize",
      "description": "Build using Edalize",
      "tool": "icestorm",
      "tool_options": [
        {
            "nextpnr_options": ["--hx1k", "--freq 12", "--package tq144"],
            "pnr": "next"
        }
      ],
      "program": [{"cmd" : "iceprog", "bit_format" : "bin"}],
      "constraints": [{"name": "icestick.pcf", "file_type": "PCF"}]
    },
    {
      "builder" : "shell",
      "command" : "icestick.sh",
      "description": "Custom shell scripts using yosys and nextpnr"
    }
  ],
  "pins": {
    "basic": [
      {
        "name": "led0",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "led1",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "led2",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "led3",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "led4",
        "type": "uint1",
        "io": "output"
      }
    ],
    "oled": [
      {
        "name": "oled_clk",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "oled_mosi",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "oled_csn",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "oled_resn",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "oled_dc",
        "type": "uint1",
        "io": "output"
      }
    ],
    "vga": [
      {
        "name": "vga_hs",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "vga_vs",
        "type": "uint1",
        "io": "output"
      },
      {
        "name": "vga_r",
        "type": "uint6",
        "io": "output"
      },
      {
        "name": "vga_g",
        "type": "uint6",
        "io": "output"
      },
      {
        "name": "vga_b",
        "type": "uint6",
        "io": "output"
      }
    ]
  }
}
